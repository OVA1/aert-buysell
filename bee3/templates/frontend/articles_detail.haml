-extends "base.html"


-block content
  .panel.panel-default
    .panel-heading
      %h3 << <b>{{ item.title }}</b> <br/><small>Mise en ligne par <a href="#">Owfa</a> le 15 mars à 14:10.</small>
    .panel-body
      .row
        .col-sm-8
          .thumbnail
            %img data-src="holder.js/600x500" alt="Image"
          %table.table
            %tr
              %td << Prix:
              %td << <strong>{{ item.price }} €<strong>
            %tr
              %td << Ville:
              %td << {{ item.city }}
        .col-sm-4
          %p
            %button.btn.btn-primary.btn-lg.btn-block type="button" << Contacter l'annonceur par email
            %a.btn.btn-default.btn-lg.btn-block href="tel:06.85.85.44.66"
              %span.glyphicon.glyphicon-phone-alt << &nbsp;06.85.85.44.66
      .row
        .col-sm-12
          <strong>Description:</strong>
          %div
            {{ item.desc }}
